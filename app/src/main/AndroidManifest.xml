<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cbpos1989.com.helloworld" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HelloWorld"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ValidMessageActivity"
            android:label="@string/title_activity_other" >
        </activity>
        <activity
            android:name=".InvalidMessage"
            android:label="@string/title_activity_invalid_message" >
        </activity>
        <activity
            android:name=".PersonActivity"
            android:label="@string/title_activity_person" >
        </activity>
        <activity
            android:name=".DatabaseActivity"
            android:label="@string/title_activity_database" >
        </activity>
        <activity
            android:name=".AddPersonActivity"
            android:label="@string/title_activity_add_person" >
        </activity>
    </application>

</manifest>
